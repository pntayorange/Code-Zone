class Solution {
public:
    string finalString(string s) {
        int size=s.length();
        string str="";
      
        for(int i=0;i<size;i++){
            if(s[i]=='i'){
            reverse(str.begin(),str.end());
            }
            else{
                str+=s[i];
            }
        }
        return str;
    }
};
